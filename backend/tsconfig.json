{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "~/*": ["src/*"],
      "utils": ["../utils/src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../utils/tsconfig.build.json"
    }
  ]
}
